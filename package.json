{
  "name": "codetorch",
  "displayName": "CodeTorch",
  "publisher": "CodeTorch",
  "description": "Scaffolds code with natural language and visual explanations",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/CodeTorch/codetorch.git"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:codetorch.showQuickMenu"
  ],
  "main": "./out/extension.js",
  "icon": "assets/codeTorchIcon.png",
  "contributes": {
    "commands": [
      {
        "command": "codetorch.nop",
        "title": "CodeTorch: No Operation",
        "category": "CodeTorch"
      },
      {
        "command": "codetorch.showQuickMenu",
        "title": "CodeTorch: Settings",
        "category": "CodeTorch"
      },
      {
        "command": "codetorch.regenerateSummaries",
        "title": "CodeTorch: Regenerate Summaries for Current File",
        "category": "CodeTorch"
      }
    ],
    "configuration": {
      "title": "CodeTorch",
      "properties": {
        "codetorch.model": {
          "type": "string",
          "default": "gemini-2.0-flash",
          "description": "LLM model ID to use for summarization."
        },
        "codetorch.temperature": {
          "type": "number",
          "default": 0.3,
          "description": "Sampling temperature for the LLM (if supported)."
        },
        "codetorch.commentPrefix": {
          "type": "string",
          "default": "// >",
          "description": "Prefix inserted before each generated comment line."
        },
        "codetorch.awsRegion": {
          "type": "string",
          "default": "us-east-1",
          "description": "AWS region where Bedrock is available."
        },
        "codetorch.showSummaries": {
          "type": "boolean",
          "default": true,
          "description": "Show inline CodeLens summaries."
        },
        "codetorch.enableSummaries": {
          "type": "boolean",
          "default": true,
          "description": "Enable LLM-based summary generation. Disabling also hides summaries."
        },
        "codetorch.regenerationTrigger": {
          "type": "string",
          "enum": ["onSave", "manual"],
          "default": "onSave",
          "description": "When CodeTorch should regenerate summaries: 'onSave' (default) or 'manual'."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.508.0",
    "@google/genai": "^0.3.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "mocha": "^10.2.0",
    "typescript": "^5.8.3"
  }
}
